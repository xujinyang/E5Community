<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_rentalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/RentalInformation" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/line" />

        <Button
            android:id="@+id/btn_jobInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/Job" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/line" />

        <Button
            android:id="@+id/btn_secondHandInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/SecondHand" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/line" />

        <Button
            android:id="@+id/btn_groupPurchaseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/GroupPurchase" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lv_theSplashLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <com.gaobo.e5community.ui.widget.GuideGallery
            android:id="@+id/image_wall_gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fadingEdge="none"
            android:spacing="1dip"
            android:unselectedAlpha="1" >
        </com.gaobo.e5community.ui.widget.GuideGallery>

        <LinearLayout
            android:id="@+id/gallery_point_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/image_wall_gallery"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lv_vagetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/category_logo_size"
                    android:layout_height="@dimen/category_logo_size"
                    android:src="@drawable/selector_pin_vagetable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/VegetableMarket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/category_logoText_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/category_logo_size"
                    android:layout_height="@dimen/category_logo_size"
                    android:src="@drawable/selector_pin_goods" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/GoodsMarket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/category_logoText_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lv_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/category_logo_size"
                    android:layout_height="@dimen/category_logo_size"
                    android:src="@drawable/selector_pin_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/CommunityServics"
                    android:textColor="@color/black"
                    android:textSize="@dimen/category_logoText_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/category_logo_size"
                    android:layout_height="@dimen/category_logo_size"
                    android:src="@drawable/selector_pin_market" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/NearMarket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/category_logoText_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>