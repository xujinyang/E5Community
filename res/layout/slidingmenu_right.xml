<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slide"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lv_userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_headphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1119117546@qq.com"
                android:textColor="@color/abs__background_holo_light" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/slidingmenu_left_location_place"
                android:gravity="center"
                android:text="苏州"
                android:textColor="@color/abs__background_holo_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_divider_one"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/lv_userInfo"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_userSendInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_divider_one"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lv_mycart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_fav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/mycart"
                android:textColor="@color/abs__background_holo_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_my_send" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/mySend"
                android:textColor="@color/abs__background_holo_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_divider_two"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/lv_userSendInfo"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_divider_two"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lv_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pin_job" />

            <TextView
                style="@style/secondary_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/SendResumeInfo"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_secondHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pin_secondhand" />

            <TextView
                style="@style/secondary_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/SendSecondhandInfo"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_rentalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pin_rentalinfo" />

            <TextView
                style="@style/secondary_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/SendRentalInfo"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_groupPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rightsm_ly"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pin_grouppurchase" />

            <TextView
                style="@style/secondary_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/SendGroupPurchaseInfo"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/slidingmenu_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@android:drawable/divider_horizontal_textfield"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slidingmenu_btn_height"
            android:background="@drawable/selector_rightsm_ly"
            android:text="@string/settings"
            android:textColor="@color/slidingmenu_btn"
            android:textSize="16.5sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@android:drawable/divider_horizontal_textfield"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slidingmenu_btn_height"
            android:background="@drawable/selector_rightsm_ly"
            android:text="@string/exit"
            android:textColor="@color/slidingmenu_btn"
            android:textSize="16.5sp" />
    </LinearLayout>

</RelativeLayout>