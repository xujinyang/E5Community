<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 主题 -->
    <style name="E5CommunityTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="secondary_text_style">
        <item name="android:textColor">@color/abs__background_holo_light</item>
        <item name="android:textSize">@dimen/secondary_group_textsize</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyLy_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginLeft">20.0dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
        <item name="android:background">@drawable/base_edittext_bg_selector</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyTv_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyEv_style" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>